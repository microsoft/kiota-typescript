{
    "extends": "./tsconfig.base.json",
    "compilerOptions":{
        "target": "ES2015",
        "module": "commonjs",
        "outDir": "./dist/cjs/",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "removeComments": false,
        "strictFunctionTypes": false,
        "strictNullChecks": false,
        "sourceMap": false,
        "declaration": true,
        "strict": false,
        "noImplicitThis": false
    },
	"exclude": ["node_modules", "dist"],
	"include": ["./test"],
    "references": [
        {
            "path": "./tsconfig.cjs.json"
        }
    ]
    
}